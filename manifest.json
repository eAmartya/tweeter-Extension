{
  "manifest_version": 3,
  "name": "Twitter Thread Automator",
  "version": "1.0",
  "description": "Automates posting Twitter threads.",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*"],
      "js": ["content.js"]
    }
  ]
}
